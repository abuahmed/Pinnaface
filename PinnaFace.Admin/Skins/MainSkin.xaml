            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#Ff363287" Offset="0"/>
                    <GradientStop Color="#Fffe6700" Offset="0.799"/>
                    <GradientStop Color="#Fffe6700" Offset="0.995"/>
                    <GradientStop Color="#Ff363287" Offset="0.089"/>
                </LinearGradientBrush>

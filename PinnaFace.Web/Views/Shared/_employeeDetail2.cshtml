@model PinnaFace.Core.Models.EmployeeDTO


<div id="employeeVisa_Id" >
    <div id="spinner">
    </div>
    @if (@Model.Id != 0)
    {
        <h5 style="margin-top: 25px;">Employee Details/معلومات التاءشيرة</h5>
        <hr style="margin-bottom: 5px; margin-top: 5px;"/>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="form-inline">
                  

                        <div class="form-group">
                            @Html.LabelFor(model => model.FullName, "Full Name ")
                            @Html.TextBoxFor(model => model.FullName, new {@class = "form-control", @disabled = "disabled"})
                            @Html.ValidationMessageFor(model => model.FullName)
                        </div>
                     
                        <div class="form-group">
                            @Html.LabelFor(model => model.PassportNumber, "Passport No./رقم الهوية")
                            @Html.TextBoxFor(model => model.PassportNumber, new {@class = "form-control", @disabled = "disabled"})
                            @Html.ValidationMessageFor(model => model.PassportNumber)
                        </div>
                    
                        <div class="form-group">
                            @Html.LabelFor(model => model.CodeNumber, "Code No. ")
                            @Html.TextBoxFor(model => model.CodeNumber, new {@class = "form-control", @disabled = "disabled"})
                            @Html.ValidationMessageFor(model => model.CodeNumber)
                        </div>
                   
                        <div class="form-group">
                            @Html.LabelFor(model => model.Sex, "Sex")
                            @Html.TextBoxFor(model => model.Sex, new {@class = "form-control", @disabled = "disabled"})
                            @Html.ValidationMessageFor(model => model.Sex)
                        </div>
                
                
                    </div>
                </div>
       
            </div>
        </div>


        <h5 style="margin-top: 25px;">Visa Details/معلومات التاءشيرة</h5>
        <hr style="margin-bottom: 5px; margin-top: 5px;"/>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="form-inline">
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.Sponsor.FullName, "Full Name/الاسم الكامل")
                            @Html.TextBoxFor(model => model.Visa.Sponsor.FullName, new {@class = "form-control", @disabled = "disabled"})
                           
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.Sponsor.PassportNumber, "I.D. Card No./رقم الهوية")
                            @Html.TextBoxFor(model => model.Visa.Sponsor.PassportNumber, new {@class = "form-control", @disabled = "disabled"})
                           
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.VisaNumber, "Visa Number/رقم التاءشيرة")
                            @Html.TextBoxFor(model => model.Visa.VisaNumber, new {@class = "form-control", @disabled = "disabled"})
                          
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.VisaDateArabic, "Date of Visa/تاريخ التاءشيرة")
                            @Html.TextBoxFor(model => model.Visa.VisaDateArabic, new {@class = "form-control", @disabled = "disabled"})
                         
                        </div>

                    </div>
                </div>
       
            </div>
        </div>

        <h5 style="margin-top: 25px;">Contact/Emergency Person Details</h5>
        <hr style="margin-bottom: 5px; margin-top: 5px;"/>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="form-inline">
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactPerson.FullName, "Full Name/الاسم الكامل")
                            @Html.TextBoxFor(model => model.ContactPerson.FullName, new {@class = "form-control", @disabled = "disabled"})
                           
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactPerson.Address.Mobile, "Mobile")
                            @Html.TextBoxFor(model => model.ContactPerson.Address.Mobile, new {@class = "form-control", @disabled = "disabled"})
                           
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactPerson.Address.AlternateMobile, "Alt. Mobile")
                            @Html.TextBoxFor(model => model.ContactPerson.Address.AlternateMobile, new {@class = "form-control", @disabled = "disabled"})
                           
                        </div>
                    </div></div>
            </div>
        </div>

        <h5 style="margin-top: 25px;">Hawala Details</h5>
        <hr style="margin-bottom: 5px; margin-top: 5px;"/>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="form-inline">
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Hawala.BankNameDescription, "Bank Name")
                            @Html.TextBoxFor(model => model.Hawala.BankNameDescription, new {@class = "form-control", @disabled = "disabled"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Hawala.SwiftCodeDescription, " Swift Code")
                            @Html.TextBoxFor(model => model.Hawala.SwiftCodeDescription, new {@class = "form-control", @disabled = "disabled"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Hawala.AccountNumber, "Account Number ")
                            @Html.TextBoxFor(model => model.Hawala.AccountNumber, new {@class = "form-control", @disabled = "disabled"})
                        </div>

                    </div>

                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row-fluid">
            <div class="span3"></div>
            <div class="span6">
                <h5 class="error" style="margin-left: 25px;"> @Model.MoreNotes</h5>
            </div>
            <div class="span3"></div>
        </div>
    }
</div>
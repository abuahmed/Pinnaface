@model PinnaFace.Core.Models.ComplainDTO

@{
    ViewBag.Title = "Delete Complain";
}


<h3>Delete Complain</h3>

<h4>Are you sure you want to delete this Complain? </h4> 
<h6> @Html.ActionLink("Back to List", "Index")</h6>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m=>m.Id)

    <h5 style="margin-bottom: 0px; margin-top: 15px;">Complain Detail</h5>
    <hr style="margin-bottom: 5px; margin-top: 0px;"/>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                    
                <div class="form-inline">
                   
                    <div class="form-group">
                        @Html.LabelFor(model => model.Employee.FullName, "Employee Name: ")
                        @Html.TextBoxFor(model => model.Employee.FullName, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Employee.Visa.Sponsor.FullName, "Sponsor Name: ")
                        @Html.TextBoxFor(model => model.Employee.Visa.Sponsor.FullName, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
             
                  
                    <div class="form-group">
                        @Html.LabelFor(model => model.ComplainDate, "Complain Date")
                        @Html.TextBoxFor(model => model.ComplainDateString, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                        
                    <div class="form-group">
                        @Html.LabelFor(model => model.Priority, "Priority")
                        @Html.TextBoxFor(model => model.Priority, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                        
                    <div class="form-group">
                        @Html.LabelFor(model => model.Type, "Type ")
                        @Html.TextBoxFor(model => model.ComplainTypeDescription, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                  
                    <div class="form-group">
                        @Html.LabelFor(model => model.Complain, "Complain ")
                        @Html.TextBoxFor(model => model.Complain, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                </div>
            </div>
       
        </div>
    </div>
    
    <p>
        <input type="submit" value="Delete Complain" class="btn btn-lg btn-danger" style="padding: 10px 32px;"/> 
    </p>
}
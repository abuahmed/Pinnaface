@model PinnaFace.Core.Models.ComplainDTO

@{
    ViewBag.Title = "Complain Detail";
}

<style type="text/css">
    .form-control2 {
        font-size: 12px;
        /*width:250px;*/
        font-weight: bold;
        height: 26px;
        padding: 3px 6px;
    }

    .form-group2 { width: 47% }
</style>

<div style="background: white; padding: 10px;">
    

    @Html.HiddenFor(model => model.EmployeeId)
        
    <h4 style="margin-top: 10px;">Complain Detail </h4>
    <hr style="margin-bottom: 5px; margin-top: 5px;"/>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                    
                <div class="form-inline">
                    @Html.LabelFor(model => model.ComplainNumber, "Number: ")
                    @Html.TextBoxFor(model => model.ComplainNumber,
                        new {@class = "form-control form-control2", @style = "width:250px;", @disabled = "disabled"})
                   
                    @Html.LabelFor(model => model.Status, "Status: ")
                    @Html.TextBoxFor(model => model.Status,
                        new {@class = "form-control form-control2", @style = "width:250px;", @disabled = "disabled"})
                 
                </div>

            </div>

        </div>
    </div>
    

    <h5 style="margin-bottom: 0px; margin-top: 15px;">Employee/Sponsor Detail</h5>
    <hr style="margin-bottom: 5px; margin-top: 0px;"/>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                    
                <div class="form-inline">
                   
                    <div class="form-group">
                        
                        @Html.LabelFor(model => model.Employee.FullName, "Employee Name: ")
                        @Html.TextBoxFor(model => model.Employee.FullName, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Employee.Visa.Sponsor.FullName, "Sponsor Name: ")
                        @Html.TextBoxFor(model => model.Employee.Visa.Sponsor.FullName, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                  
                    <div class="form-group">
                        @Html.LabelFor(model => model.Employee.Visa.Sponsor.Address.Telephone, "Sponsor Tel.: ")
                        @Html.TextBoxFor(model => model.Employee.Visa.Sponsor.Address.Telephone, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                          
                    <div class="form-group">
                        @Html.LabelFor(model => model.Employee.Visa.Sponsor.Address.Mobile, "Sponsor Mobile: ")
                        @Html.TextBoxFor(model => model.Employee.Visa.Sponsor.Address.Mobile, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                </div>

            </div>
       
        </div>
    </div>
   

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span6">
                <h5 style="margin-bottom: 0px; margin-top: 15px;">Complain Details</h5>
                <hr style="margin-bottom: 5px; margin-top: 0px;"/>

                <div class="form-inline">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ComplainDate, "Complain Date")
                        @Html.TextBoxFor(model => model.ComplainDateString, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>

                        
                    <div class="form-group">
                        @Html.LabelFor(model => model.Priority, "Priority")
                        @Html.TextBoxFor(model => model.Priority, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>

                        
                    <div class="form-group">
                        @Html.LabelFor(model => model.Type, "Type ")
                        @Html.TextBoxFor(model => model.ComplainTypeDescription, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>
                    
                </div>
                
                <div class="form-group form-group2">
                    @Html.LabelFor(model => model.Complain, "Complain ")
                    @Html.TextAreaFor(model => model.Complain, new {@class = "form-control form-control2", @disabled = "disabled", @col = 3, @style = "font-weight:normal;"})
                </div>

                
            </div>
            
            <div class="span6">
                <h5 style="margin-bottom: 0px; margin-top: 15px;">Raised By</h5>
                <hr style="margin-bottom: 5px; margin-top: 0px;"/>

                <div class="form-inline">

                    <div class="form-group">
                        @Html.LabelFor(model => model.RaisedByName, "Name ")
                        @Html.TextBoxFor(model => model.RaisedByName, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>

                        
                    <div class="form-group">
                        @Html.LabelFor(model => model.RaisedByTelephone, "Telephone ")
                        @Html.TextBoxFor(model => model.RaisedByTelephone, new {@class = "form-control form-control2", @disabled = "disabled"})
                    </div>

                        
                    <div class="form-group">
                        @Html.LabelFor(model => model.RaisedByRelationship, "Relationship")
                        @Html.TextBoxFor(model => model.RaisedByRelationship, new {@class = "form-control form-control2", @disabled = "disabled"})
                        
                    </div>

                </div>
       
            </div>

        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
        
            <div class="span6">
                <h5>Remarks</h5>
                <hr style="margin-top:5px;margin-bottom: 5px; "/>
                    
                <table class="table table-striped table-condensed table-hover" id="table_id2">

                    <tr>
                        <th style="width: 100px;">Date
                        </th>
                        <th>Remark
                        </th>
                    
                    </tr>

                    <tbody>
                        @foreach (var employeeDto in Model.Remarks)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => employeeDto.ComplainRemarkDateString)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => employeeDto.Remark)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            
            <div class="span6">
                <div>
                    <h5>Solution Detail</h5>
                    <hr style="margin-top:5px;margin-bottom: 5px; "/>

                    <div class="form-inline">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FinalSolutionDate, "Solution Date")
                            @Html.TextBoxFor(model => model.FinalSolutionDateString, new {@class = "form-control form-control2", @disabled = "disabled"})
                        </div>
                                   
                        <div class="form-group">
                            @Html.LabelFor(model => model.FinalSolution, "Solution  Given")
                            @Html.TextAreaFor(model => model.FinalSolution, new {@class = "form-control form-control2", @disabled = "disabled", @col = 3, @style = "font-weight:normal;"})
                        </div>

                    </div>
                </div>
                
                <div>
                    <h5>ReOpening Detail</h5>
                    <hr style="margin-top:5px;margin-bottom: 5px; "/>

                    <div class="form-inline">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReOpeningDate, "ReOpening Date")
                            @Html.TextBoxFor(model => model.ReOpeningDateString, new {@class = "form-control form-control2", @disabled = "disabled"})
                        </div>
                                   
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReOpening, "ReOpening Detail")
                            @Html.TextAreaFor(model => model.ReOpening, new {@class = "form-control form-control2", @disabled = "disabled", @col = 3, @style = "font-weight:normal;"})
                        </div>

                    </div>
                </div>
                
                 <div>
                    <h5>Confirmation Detail</h5>
                    <hr style="margin-top:5px;margin-bottom: 5px; "/>

                    <div class="form-inline">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmationDate, "Confirmation Date")
                            @Html.TextBoxFor(model => model.ConfirmationDateString, new {@class = "form-control form-control2", @disabled = "disabled"})
                        </div>
                                   
                        <div class="form-group">
                            @Html.LabelFor(model => model.Confirmation, "Confirmation Detail")
                            @Html.TextAreaFor(model => model.Confirmation, new {@class = "form-control form-control2", @disabled = "disabled", @col = 3, @style = "font-weight:normal;"})
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>


</div>

<script type="text/javascript">
    $(document).ready(function ()
    {
        $('#loadingDiv').hide();
    });


</script>
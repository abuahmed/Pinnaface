@model PinnaFace.Core.Models.EmployeeDTO

@{
    ViewBag.Title = "Detach Employee";
}

@using (Html.BeginForm())
{

<h3>Detach Employee</h3>

<h4>Are you sure you want to detach this Employee's Visa? </h4> 
<h6> @Html.ActionLink("Back to List", "Index")</h6>

<h5 style="margin-top:25px;">Employee Details/معلومات التاءشيرة</h5>
<hr style="margin-top:5px;margin-bottom: 5px; "/>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="form-inline">
                  @Html.HiddenFor(model=>model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, "Given Name ")
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @disabled = "disabled"})
                    @Html.ValidationMessageFor(model=>model.FirstName)
                </div>
                            
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, "Last Name ")
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @disabled = "disabled"})
                    @Html.ValidationMessageFor(model=>model.LastName)
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.PassportNumber, "Passport No./رقم الهوية")
                    @Html.TextBoxFor(model => model.PassportNumber, new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model=>model.PassportNumber)
                </div>

                        
                <div class="form-group ">
                    @Html.LabelFor(model => model.Address.Mobile,"Employee Tel. / الجوال")
                    @Html.TextBoxFor(model => model.Address.Mobile, new { @class = "form-control", @disabled = "disabled"})
                </div>
                
            </div>
        </div>
       
    </div>
</div>


<h5 style="margin-top:25px;">Assigned Visa Details/معلومات التاءشيرة</h5>
<hr style="margin-top:5px;margin-bottom: 5px; "/>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="form-inline">
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.Sponsor.FullName, "Full Name/الاسم الكامل")
                            @Html.TextBoxFor(model => model.Visa.Sponsor.FullName, new { @class = "form-control", @disabled = "disabled" })
                           
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.Sponsor.PassportNumber, "I.D. Card No./رقم الهوية")
                            @Html.TextBoxFor(model => model.Visa.Sponsor.PassportNumber, new { @class = "form-control", @disabled = "disabled"  })
                           
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.VisaNumber, "Visa Number/رقم التاءشيرة")
                            @Html.TextBoxFor(model => model.Visa.VisaNumber, new { @class = "form-control", @disabled = "disabled"  })
                          
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Visa.VisaDateArabic, "Date of Visa/تاريخ التاءشيرة")
                            @Html.TextBoxFor(model => model.Visa.VisaDateArabic, new { @class = "form-control", @disabled = "disabled"  })
                         
                        </div>

                    </div>
        </div>
    </div>
</div>




    <p>
        <input type="submit" value="Detach Visa" class="btn btn-lg btn-danger" style="padding: 10px 32px;"/> 
    </p>
}

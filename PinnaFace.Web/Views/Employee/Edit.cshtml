       @*<h4 style="margin-top:25px;">Agreement Details/ معلومات التفاق</h4>
        <hr style="margin-top:5px;margin-bottom: 5px; "/>*@
       
        <div class="modal-footer">
            <div class="pull-left">
                <div id='loadingDiv'>
                    Please wait... <img src="~/Images/loading-image.gif" />
                </div>
            </div>
        
            <div class="pull-right ">
                <input type="submit" value="Save Employee" class="btn btn-lg btn-primary" style="padding: 10px 32px;" />
            </div>
        </div>

   }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        //$.validator.unobtrusive.parse("#reserve");
        $('#loadingDiv').hide();
        //$('.datefield').datepicker();
    });
    
